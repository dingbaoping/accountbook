.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  text-align: center;
  font-size: 32rpx;
  color: #007aff;
}

.accout-box{
  width: 100%;
  padding: 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.accout{
  width: 100%;
  display: flex;
  flex-direction: column;
  border: 1rpx solid rgb(233, 230, 230);
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #fff;
}
.accout-title{
  margin: 0 30rpx;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid rgb(233, 230, 230);
}
.accout-statistics{
  padding-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.accout-statistics-data{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.left{
  border-right: 1rpx solid rgb(233, 230, 230);
}
.accout-statistics-data-money{
  font-size: 40rpx;
  font-weight: bold;
}
.total-box{
  border-bottom: 1rpx solid rgb(233, 230, 230);
   display: flex;
   flex-direction: row;
   justify-content: center;
   align-items: center;
  font-size: 28rpx;
  margin: 0 30rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.total{
  font-size: 36rpx;
}

.more{
  width: 100%;
  color: #4fafed;
  font-size: 28rpx;
   margin: 0 30rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}